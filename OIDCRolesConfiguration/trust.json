{
  "Version": "2012-10-17",
  "Statement": [
      {
          "Effect": "Allow",
          "Principal": {
              "Federated": "arn:aws:iam::211125594221:oidc-provider/token.actions.githubusercontent.com"
          },
          "Action": "sts:AssumeRoleWithWebIdentity",
          "Condition": {
              "StringEquals": {
                  "token.actions.githubusercontent.com:aud": "sts.amazonaws.com"
              },
              "StringLike": {
                  "token.actions.githubusercontent.com:sub": [
                      "repo:Kryvchenko/aws-oidc-workflow:pull_request",
                      "repo:Kryvchenko/aws-oidc-workflow:ref:refs/heads/main"
                  ]
              }
          }
      }
  ]
}